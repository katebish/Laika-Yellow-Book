<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewEntryActivity">

    <ScrollView
        android:layout_width="353dp"
        android:layout_height="397dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.645">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/edit_CowNumber"
                android:text="Cow Number" />

            <EditText
                android:id="@+id/edit_CowNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Cow Number"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:nextFocusDown="@+id/edit_CalfIndent"
                android:drawableRight="@drawable/voicebutton"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/edit_CalfIndent"
                android:text="Calf ID" />

            <EditText
                android:id="@+id/edit_CalfIndent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Calf ID"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:nextFocusDown="@+id/edit_DueCalveDate"
                android:drawableRight="@drawable/voicebutton"/>

            <TextView
                android:id="@+id/tv_addTwinCalf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="right"
                android:labelFor="@id/edit_CalfIndent"
                android:onClick="AddNewCalf"
                android:text="@string/addNewCalf" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/edit_DueCalveDate"
                android:text="Due Calve Date" />

            <EditText
                android:id="@+id/edit_DueCalveDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Due Calve Date"
                android:imeOptions="actionNext"
                android:inputType="date"
                android:nextFocusDown="@+id/edit_SireIfCalf"
                android:drawableRight="@drawable/voicebutton"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/edit_SireIfCalf"
                android:text="Sire of Calf" />

            <EditText
                android:id="@+id/edit_SireIfCalf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Sire of Calf"
                android:imeOptions="actionNext"
                android:inputType="date"
                android:nextFocusDown="@+id/edit_CalfBW"
                android:drawableRight="@drawable/voicebutton"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/edit_CalfBW"
                android:text="Calf B.W." />

            <EditText
                android:id="@+id/edit_CalfBW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Calf B.W."
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:nextFocusDown="@+id/edit_CalvingDate"
                android:drawableRight="@drawable/voicebutton"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/edit_CalvingDate"
                android:text="Calving Date" />

            <EditText
                android:id="@+id/edit_CalvingDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Calving Date"
                android:imeOptions="actionNext"
                android:inputType="date"
                android:nextFocusDown="@+id/edit_CalvingDiff"
                android:drawableRight="@drawable/voicebutton"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/edit_CalvingDiff"
                android:text="Calving Diff." />

            <EditText
                android:id="@+id/edit_CalvingDiff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Calving Diff."
                android:imeOptions="actionNext"
                android:inputType="text"
                android:nextFocusDown="@+id/edit_Condition"
                android:drawableRight="@drawable/voicebutton"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/edit_Condition"
                android:text="Condition" />

            <EditText
                android:id="@+id/edit_Condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Condition"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:nextFocusDown="@+id/edit_Sex"
                android:drawableRight="@drawable/voicebutton"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/edit_Sex"
                android:text="Sex" />

            <EditText
                android:id="@+id/edit_Sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Sex"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:nextFocusDown="@+id/edit_Fate"
                android:drawableRight="@drawable/voicebutton"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/edit_Fate"
                android:text="Fate" />

            <EditText
                android:id="@+id/edit_Fate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Fate"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:nextFocusDown="@+id/edit_Remarks"
                android:drawableRight="@drawable/voicebutton"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/edit_Remarks"
                android:text="Remarks" />

            <EditText
                android:id="@+id/edit_Remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Remarks"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:drawableRight="@drawable/voicebutton"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_Save"
        android:layout_width="136dp"
        android:layout_height="42dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="136dp"
        android:layout_marginLeft="136dp"
        android:layout_marginRight="136dp"
        android:layout_marginStart="136dp"
        android:onClick="AddData"
        android:text="Save"
        android:theme="@style/AppTheme.Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btn_VoiceInput"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:onClick="askSpeechInput"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/microphone" />

</android.support.constraint.ConstraintLayout>